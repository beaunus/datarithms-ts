{
  "defaultSeverity": "error",
  "extends": ["tslint-plugin-prettier", "tslint-config-prettier"],
  "jsRules": {},
  "rules": {
    "file-name-casing": [true, "camel-case"],
    "prefer-const": true,
    "no-shadowed-variable": true,
    "prettier": true,
    "object-literal-sort-keys": true,
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        },
        "esSpecCompliant": true
      }
    ]
  },
  "rulesDirectory": []
}
